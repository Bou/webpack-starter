{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["eslint-plugin-prettier", "unused-imports"],
  "rules": {
    "prettier/prettier": "warn",
    "unused-imports/no-unused-imports": "error",
    "no-unused-vars": "off",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
